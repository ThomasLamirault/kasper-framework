<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- ================ Spring Framework configuration ================== -->
	
    <import resource="classpath:spring/kasper/spring-kasper-platform.xml"/>


    <bean id="instancesManager" class="com.viadeo.kasper.core.boot.SpringComponentsInstanceManager" />

    <bean id="rootProcessor" class="com.viadeo.kasper.core.boot.AnnotationRootProcessor">
        <property name="componentsInstanceManager" ref="instancesManager" />
		<property name="scanPrefixes">
			<list>
                <value>com.viadeo.kasper</value>
			</list>
		</property>
	</bean>

</beans>
