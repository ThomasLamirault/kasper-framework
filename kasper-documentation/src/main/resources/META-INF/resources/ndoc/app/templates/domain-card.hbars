
<div class="container">
  <ol class="breadcrumb">
    <li><a id="home-from-{{node.name}}" href="#home">Home</a></li>
    <li class="active">{{node.name}}</li>
  </ol>
</div>

<div class="container">
  <div class="panel panel-default">
      <h2 class="panel-heading"><span class="glyphicon glyphicon-unchecked"/>{{node.name}}</h2>
      <div class="panel-body">
        <p class="text-justify">{{node.description}}</p>
        {{#if node.owner}}
        <dl class="block-content dl-horizontal">
            <dt>Owner</dt>
            <dd><a href="mailto:{{node.owner}}">{{node.owner}}</a></dd>
        </dl>
        {{/if}}
      </div>     
  </div>  
</div>
